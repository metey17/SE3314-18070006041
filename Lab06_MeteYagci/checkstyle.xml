<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<module name="Checker">

    <module name="Checker">
        <property name="packageFormat" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
        <property name="allowClassesWithoutPackage" value="false"/>
    </module>

    <module name="RegexpSinglelineJava">
        <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        <property name="message" value="Class name must be in UpperCamelCase format"/>
        <property name="fileExtensions" value="java"/>
    </module>

    <module name="RegexpSinglelineJava">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        <property name="message" value="Method name must be in lowerCamelCase format"/>
        <property name="fileExtensions" value="java"/>
    </module>

    <module name="RegexpSinglelineJava">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        <property name="message" value="Variable name must be in lowerCamelCase format"/>
        <property name="fileExtensions" value="java"/>
    </module>

    <module name="RegexpSinglelineJava">
        <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
        <property name="message" value="Constant name must be in UPPER_CASE format"/>
        <property name="fileExtensions" value="java"/>
    </module>

    <module name="RegexpSinglelineJava">
        <property name="format" value=".*Abstract$"/>
        <property name="message" value="Abstract class/interface name must end with 'Abstract'"/>
        <property name="fileExtensions" value="java"/>
    </module>


    <module name="ClassDataAbstractionCoupling">
        <property name="max" value="5"/>
    </module>


    <module name="ClassFanOutComplexity">
        <property name="max" value="10"/>
    </module>


    <module name="MaximMethods">
        <property name="max" value="50"/>
    </module>
</module>
